[
{
  "testname": "Test basic NAT configuration",
  "testcase": {
    "testname": "Test basic NAT configuration",
    "objective": "Validate basic NAT configuration on MX480 device",
    "steps": [
      "NAT rule created successfully", 
      "Traffic matched NAT rule and got translated"
    ],
    "testdata": {
      "nat_rule": {
        "name": "NAT-Rule1", 
        "source_addr": "10.1.1.0/24", 
        "translated_addr": "192.168.1.0/24" 
      }
    }
  },
  "testscript": {
    "testname": "Test basic NAT configuration",
    "objective": "Validate basic NAT configuration on MX480 device", 
    "file_name": "test_basic_nat.py",
    "init_scripts": [
      "pip install jnpr.junos",
      "pip install paramiko"
    ],
    "script": """
import jnpr.junos as pyez

dev = pyez.Device(host='192.168.1.1', user='netconf', password='password')
dev.open()

nat_rule = {
  "name": "NAT-Rule1",
  "source_addr": "10.1.1.0/24",
  "translated_addr": "192.168.1.0/24"
}

dev.cu.load(template_path="/path/to/nat_template.json", template_vars=nat_rule)

dev.close()
    """,
    "run_command": "python test_basic_nat.py",
    "expected_result": "NAT rule configured successfully"
  }
},
{
  "testname": "Test NAT pool configuration",
  "testcase": {
    "testname": "Test NAT pool configuration",
    "objective": "Validate NAT pool configuration on MX480",
    "steps": [
      "NAT pool created successfully",
      "Traffic matched NAT pool and got translated" 
    ],
    "testdata": {
      "nat_pool": {
        "name": "Nat-Pool1",
        "start_address": "192.168.100.200",
        "end_address": "192.168.100.250"  
      }
    }
  },
  "testscript": {
    "testname": "Test NAT pool configuration",
    "objective": "Validate NAT pool configuration on MX480",
    "file_name": "test_nat_pool.py",
    "init_scripts": [
      "pip install jnpr.junos",
      "pip install paramiko"
    ],
    "script": """  
import jnpr.junos as pyez

dev = pyez.Device(host='192.168.1.1', user='netconf', password='password')  
dev.open()

nat_pool = {
  "name": "Nat-Pool1",
  "start_address": "192.168.100.200", 
  "end_address": "192.168.100.250"   
}

dev.cu.load(template_path="/path/to/nat_pool_template.json", template_vars=nat_pool)

dev.close()
    """,
    "run_command": "python test_nat_pool.py",
    "expected_result": "NAT pool configured successfully"
  }
