  {
    "testname": "VPN Policy Enforcement Test", 
    "testcase": {
      "testname": "VPN Policy Enforcement Test",
      "objective": "Validate that VPN policies are properly enforced on the EX4300-32F",
      "steps": [
        "Configure VPN policy to allow VPN traffic from Site A", 
        "Verify VPN traffic from Site A passes",
        "Configure VPN policy to deny VPN traffic from Site B",
        "Verify VPN traffic from Site B is blocked"
      ]
    },
    "testscript": {
      "testname": "VPN Policy Enforcement Test",
      "objective": "Automated test script to validate VPN policy enforcement",
      "file_name": "vpn_policy_test.py",
      "init_scripts": [
        "pip install paramiko",
        "pip install netmiko"
      ],
      "script": """
        import paramiko
        import netmiko
        
        HOST = '10.1.1.1'
        USERNAME = 'admin'
        PASSWORD = 'Juniper123'
        
        def test_vpn_policy():
          net_connect = netmiko.ConnectHandler(ip=HOST, username=USERNAME, password=PASSWORD)
        
          # Configure VPN policy to allow Site A
          net_connect.send_config_set(['vpn policy allow-site-a']) 
        
          # Verify Site A VPN traffic passes
          output = net_connect.send_command('show vpn traffic')
          if 'Site A VPN Traffic: Allowed' in output:
            print('Site A VPN traffic test passed')
          else:
            raise Exception('Site A VPN traffic test failed')
          
          # Configure VPN policy to deny Site B  
          net_connect.send_config_set(['vpn policy deny-site-b'])
          
          # Verify Site B VPN traffic blocked
          output = net_connect.send_command('show vpn traffic')
          if 'Site B VPN Traffic: Blocked' in output:
            print('Site B VPN traffic test passed')
          else:
            raise Exception('Site B VPN traffic test failed')
            
        test_vpn_policy()
      """,
      "run_command": "python vpn_policy_test.py",
      "expected_result": "Prints 'Site A VPN traffic test passed' and 'Site B VPN traffic test passed' if policies enforced correctly"
    }
  }
]
