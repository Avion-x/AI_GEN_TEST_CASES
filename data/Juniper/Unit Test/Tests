    "testscript": {
      "testname": "Bootup Hardware Initialization Test",
      "objective": "Verify that all hardware components are detected and initialized during bootup",
      "file_name": "test_bootup_hw_init.py",
      "init_scripts": "pip install junos-eznc",
      "script": """\"\"\"
from jnpr.junos import Device
import pytest

def test_bootup_hw_init(host, user, password):
    dev = Device(host=host, user=user, password=password)
    dev.open()
    
    # Check CPU
    cpu_output = dev.cli('show chassis routing-engine') 
    assert 'RE model' in cpu_output
    
    # Check memory
    mem_output = dev.cli('show chassis routing-engine')
    assert 'Memory' in mem_output
    
    # Check ports
    port_output = dev.cli('show interfaces terse')
    assert len(port_output.splitlines()) > 0
    
    # Check fans 
    fan_output = dev.cli('show chassis environment')
    assert 'Fans' in fan_output
    
\"\"\"
""",
      "run_command": "python test_bootup_hw_init.py --host=192.0.2.1 --user=test --password=password123",
      "expected_result": "No AssertionError raised, test passes"
    }
  }  
