 Here are 2 unit test cases with python test scripts for VLAN configuration on MX480 Juniper device:

###STARTLIST###
[
{
  "testname": "Test VLAN creation",
  "testcase": {
    "testname": "Test VLAN creation",
    "objective": "Validate creation of VLAN on MX480 device",
    "steps": [
      "Create VLAN 500 on MX480 device", 
      "Verify VLAN 500 exists in VLAN table"
    ],
    "test_data": {
      "vlan_id": 500,
      "vlan_name": "test-vlan"  
    }
  },
  
  "testscript": {
    "testname": "Test VLAN creation",  
    "objective": "Validate creation of VLAN on MX480 device",
    "file_name": "test_create_vlan.py",
    "init_scripts": [
      "pip install netmiko",
      "pip install unittest"
    ],
    "script": """  
import netmiko
from netmiko import ConnectHandler
import unittest

class TestCreateVlan(unittest.TestCase):
    
    def test_create_vlan(self):
        device = {
            'device_type': 'juniper',
            'host': 'mx480', 
            'username': 'netconf', 
            'password': 'juniper123',
        }
        
        net_connect = ConnectHandler(**device)
        config_commands = [
            'set vlans test-vlan vlan-id 500',
        ]
        output = net_connect.send_config_set(config_commands) 
        self.assertIn(' vlan-id 500 ', output)
        
if __name__ == '__main__':
    unittest.main()     
    """,
    "run_command": "python test_create_vlan.py",
    "expected_result": "OK" 
  }
},

{
  "testname": "Test VLAN deletion", 
  "testcase": {
    "testname": "Test VLAN deletion",
    "objective": "Validate deletion of VLAN 500 from MX480 device",
    "steps": [
      "Delete VLAN 500 from MX480 device ",
      "Verify VLAN 500 removed from VLAN table"  
    ],
    "test_data": {
      "vlan_id": 500
    }
  },
  
  "testscript": {
    "testname": "Test VLAN deletion",
    "objective": "Validate deletion of VLAN 500 from MX480 device", 
    "file_name": "test_delete_vlan.py",
    "init_scripts": [
      "pip install netmiko",
      "pip install unittest"
    ],
    "script": """
import netmiko
from netmiko import ConnectHandler  
import unittest

class TestDeleteVlan(unittest.TestCase):
    
    def test_delete_vlan(self):
        device = {
            'device_type': 'juniper',
            'host': 'mx480',
            'username': 'netconf',  
            'password': 'juniper123',
        }
        
        net_connect = ConnectHandler(**device)
        config_commands = [
            'delete vlans test-vlan vlan-id 500', 
        ]
        output = net_connect.send_config_set(config_commands)
        self.assertNotIn('vlan-id 500', output)
        
if __name__ == '__main__':
    unittest.main()
    """,
    "run_command": "python test_delete_vlan.py",
    "expected_result": "OK"
  }
}
]
###ENDLIST###