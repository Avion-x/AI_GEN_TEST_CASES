import re
from jnpr.junos import Device

def test_bootup_config_retrieval(host, user, password):
    dev = Device(host=host, user=user, password=password)
    dev.open()
    
    startup_config = dev.cli('show configuration | display set')
    running_config = dev.cli('show configuration | display set')
    
    assert startup_config == running_config

\"\"\"
