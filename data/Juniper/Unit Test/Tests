  },
  "testscript": {
    "testname": "HSRP Configuration Test",
    "objective": "Validate HSRP configuration on MX480 devices using Python",  
    "file_name": "hsrp_config_test.py",
    "init_scripts": ["pip install pyats.tron"],
    "script": """
import pyats.tron as tron

hsrp_group = 1
hsrp_priority = 100 
hsrp_preempt = True

testbed = tron.load('testbed.yaml')
device = testbed.devices['MX480']

config = device.parse('show configuration')

assert f'group {hsrp_group}' in config
assert f'priority {hsrp_priority}' in config 
assert 'preempt' in config
""",
    "run_command": "python hsrp_config_test.py",
    "expected_result": "HSRP configuration validated successfully"
  }
},

