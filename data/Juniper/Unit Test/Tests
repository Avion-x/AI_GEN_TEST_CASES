      "pip install scp"
    ],
    "script": """
      import paramiko
      import scp
      
      ssh = paramiko.SSHClient()
      ssh.set_missing_host_key_policy(paramiko.AutoAddPolicy())
      ssh.connect('192.168.0.1', username='testuser', password='testpass')
      
      scp.SCPClient(ssh.get_transport()).put('dscp_test.py', '/tmp/')
      
      stdin, stdout, stderr = ssh.exec_command('python /tmp/dscp_test.py')
      print(stdout.read().decode('utf-8'))
      
      ssh.close()
    """,
    "run_command": "python dscp_marking_test.py", 
    "expected_result": "DSCP marking verified successfully"
  }
},

