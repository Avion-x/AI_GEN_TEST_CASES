import paramiko

def retrieve_vlan_configuration(hostname, username, password):
    ssh_client = paramiko.SSHClient()
    ssh_client.set_missing_host_key_policy(paramiko.AutoAddPolicy())
    ssh_client.connect(hostname, username=username, password=password)

    stdin, stdout, stderr = ssh_client.exec_command('show configuration | display set | match vlan')
    output = stdout.read().decode()
    
    if 'set vlans' in output:
        return 'VLAN Configuration retrieval successful'
    else:
        return 'VLAN Configuration retrieval failed'

if __name__ == '__main__':
    router_ip = '192.168.1.1'  # Replace with actual IP
    admin_username = 'admin'   # Replace with actual username
    admin_password = 'password123'  # Replace with actual password
    result = retrieve_vlan_configuration(router_ip, admin_username, admin_password)
    print(result)
""",
            "run_command": "python vlan_config_retrieval_test.py",
            "expected_result": "VLAN Configuration retrieval successful"
        }
    }
